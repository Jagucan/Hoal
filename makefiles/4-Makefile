CC     = gcc
SRC    = school.c main.c
OBJ    = school.o main.o
NAME   = school
RM     = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

.PHONY : clean oclean fclean re

clean :
	$(RM) *~ $(NAME)

oclean :
	$(RM) *.o

fclean :
	$(RM) *~ *.o $(NAME)

re : oclean all
